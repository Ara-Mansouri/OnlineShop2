@model OnlineShop.Models.Category

<h1 class="mb-4">@Model.Name</h1>
<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text text-primary">@product.Price.ToString("C")</p>
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
    
</div>
