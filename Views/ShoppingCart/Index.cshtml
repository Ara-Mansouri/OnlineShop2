@model OnlineShop.Models.ShoppingCart

<h1>Shopping Cart</h1>

@if (Model.Items.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        <img src="@item.ImageUrl" alt="@item.ProductName" style="width: 50px; height: 50px;" />
                        @item.ProductName
                    </td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity).ToString("C")</td>
                    <td>
                        <a href="/ShoppingCart/RemoveFromCart?productId=@item.ProductId" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p><strong>Total:</strong> @Model.TotalPrice.ToString("C")</p>
    <a href="/ShoppingCart/ClearCart" class="btn btn-warning">Clear Cart</a>
}
