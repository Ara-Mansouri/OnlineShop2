<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar" style="background-color: #2565AE;">
        <div class="container">
            <a class="navbar-brand" style="color:white; font-size:2.5rem; display: flex; align-items: center;" href="/">
                <img src="/images/techgadjet.png" alt="Logo" style="width: 100px; height: 60px; margin-left: 10px;" />
                تکنوگجت
            </a>
            @if (Context.Session.GetString("Username") != null)
            {
                <li class="navbar">
                    <!-- Display 'Hi, Username' in the navbar, outside of the dropdown -->
                    <span class="nav-link" style="color:white;">Hi, @Context.Session.GetString("Username")</span>
                </li>

            }
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse ms-auto" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a style="color:white; font-size:1.5rem;" class="nav-link active" href="/Home/HomePage">خانه</a>
                    </li>
                    <li class="nav-item">
                        <a style="color:white; font-size:1.5rem;" class="nav-link" href="/Home/Index">محصولات</a>
                    </li>
                    <li class="nav-item">
                        <a style="color:white; font-size:1.5rem;" class="nav-link" href="/Home/About">درباره ما</a>
                    </li>
             
                    @if (Context.Session.GetString("Username") != null)
                    {

                        <li class="nav-item">
                            <a style="color:white; font-size:1.5rem;" class="nav-link" href="/Account/Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a style="color:white; font-size:1.5rem;" class="nav-link" href="/Account/Login">Login / Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer style="background-color: #2565AE; color: white; text-align: center; padding: 1rem; margin-top: 1rem;">
        <p>&copy; تمام حقوق مادی و معنوی این سایت متعلق به تکنوگجت می‌باشد.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/scripts.js"></script>
</body>
</html>
